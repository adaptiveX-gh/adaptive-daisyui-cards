{
  "name": "adaptive-daisyui-cards",
  "version": "1.0.0",
  "description": "Adaptive DaisyUI card system with CSS Container Queries",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "api": "node api/server.js",
    "api:dev": "nodemon api/server.js",
    "api:mock": "node tests/api/mock-sse-server.js",
    "api:mock:dev": "nodemon tests/api/mock-sse-server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "playwright test --grep @visual",
    "test:a11y": "playwright test --grep @a11y",
    "test:performance": "playwright test --grep @performance",
    "test:container": "playwright test --grep @container",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:sse": "node tests/api/mock-sse-server.js"
  },
  "keywords": [
    "tailwind",
    "daisyui",
    "container-queries",
    "adaptive-cards"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@google/generative-ai": "^0.24.1",
    "axe-core": "^4.8.3",
    "cors": "^2.8.5",
    "daisyui": "^4.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "happy-dom": "^12.10.3",
    "nodemon": "^3.0.2",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  }
}
